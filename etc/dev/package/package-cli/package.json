{
    "author": {
        "email": "post@goldeimer.de",
        "name": "Goldeimer gemeinn√ºtzige GmbH",
        "url": "https://www.goldeimer.de"
    },
    "bin": {
        "goldeimer-package": "./src/package-cli.js"
    },
    "bugs": {
        "email": "engineering+bugs@goldeimer.de",
        "url": "https://github.com/goldeimer/goldeimer/issues"
    },
    "contributors": [
        "Johannes Pilkahn <johannes@goldeimer.de>"
    ],
    "dependencies": {
        "@goldeimer/manifest": "workspace:*",
        "commander": "^7.1.0",
        "concurrently": "^6.0.0"
    },
    "description": "Goldeimer's package maintenance utility",
    "devDependencies": {
        "@babel/core": "^7.12",
        "@goldeimer/babel-preset": "workspace:*",
        "@goldeimer/rollup-config": "workspace:*",
        "@goldeimer/tsconfig": "workspace:*",
        "@types/babel__core": "^7",
        "@types/concurrently": "^6",
        "@types/node": "^14.14.34",
        "rollup": "^2.30",
        "tslib": "*",
        "typescript": "~4.1"
    },
    "homepage": "https://github.com/goldeimer/goldeimer/etc/pkg/package-cli#readme",
    "keywords": [
        "goldeimer",
        "monorepo",
        "packaging"
    ],
    "license": "BSD-2-Clause",
    "main": "src/package-cli.js",
    "name": "@goldeimer/package-cli",
    "repository": {
        "directory": "etc/pkg/package-cli",
        "type": "git",
        "url": "git+https://github.com/goldeimer/goldeimer.git"
    },
    "scripts": {
        "build": "concurrently 'yarn build:types' 'yarn build:js'",
        "build:cjs": "yarn build:js --configTarget cjs",
        "build:esm": "yarn build:js --configTarget esm",
        "build:js": "rollup -c rollup.config.js",
        "build:shake": "yarn build:esm && yarn validate:shake",
        "build:types": "tsc --emitDeclarationOnly --outDir dist --declarationDir dist/types --declaration true --declarationMap true",
        "build:umd": "yarn build:js --configTarget umd",
        "explain": "tsc --explainFiles",
        "lint": "eslint src --ext .cjs --ext .js --ext .jsx --ext .mjs --ext .ts --ext .tsx",
        "lint:fix": "yarn lint --fix",
        "test": "env NODE_ENV=test echo \"[error] no test specified\" && exit 1",
        "type-check": "tsc --noEmit",
        "type-check:watch": "yarn type-check -- --watch",
        "validate": "concurrently 'yarn validate:pnp' 'yarn validate:shake'",
        "validate:pnp": "yarn dlx @yarnpkg/doctor",
        "validate:publish": "yarn validate",
        "validate:shake": "agadoo"
    },
    "sideEffects": false,
    "version": "0.0.1"
}
