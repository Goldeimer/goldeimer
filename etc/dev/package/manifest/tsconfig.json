{
    "extends": "@goldeimer/compile/tsconfig",
    "exclude": [
        "dist/",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ],
    "include": [
        "src/**/*"
    ],
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "compilerOptions": {
        "rootDir": "./src",
        "typeRoots": [
            "@types",
            "node_modules/@types",
            "./node_modules/@types"
        ]
    }
}
