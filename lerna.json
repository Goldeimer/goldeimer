{
  "command": {
      "bootstrap": {
          "strict": true
      },
      "create": {
          "homepage": "https://github.com/goldeimer/goldeimer",
          "license": "BSD-2-Clause"
      },
      "exec": {
          "profileLocation": "log/lerna/profile/",
          "stream": true
      },
      "import": {
          "preserveCommit": true
      },
      "publish": {
          "allowBranch": "master",
          "conventionalCommits": true,
          "message": "chore(release): publish",
          "preid": "next",
          "signGitCommit": true,
          "signGitTag": true
      },
      "run": {
          "profileLocation": "log/lerna/profile/",
          "stream": true
      },
      "version": {
          "allowBranch": "master",
          "conventionalCommits": true,
          "message": "chore(release): publish",
          "preid": "next",
          "signGitCommit": true,
          "signGitTag": true
      }
  },
  "npmClient": "yarn",
  "npmClientArgs": [
      "--no-package-lock"
  ],
  "packages": [
      "etc/**",
      "lib/**",
      "packages/**"
  ],
  "useWorkspaces": true,
  "version": "independent"
}
