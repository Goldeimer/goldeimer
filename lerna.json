{
    "bootstrap": {
        "npmClientArgs": ["--no-package-lock"]
    },
    "command": {
        "version": {
            "allowBranch": "master",
            "message": "chore(release): publish"
        }
    },
    "npmClient": "yarn",
    "packages": [
        "etc/**",
        "lib/**",
        "packages/**"
    ],
    "useWorkspaces": true,
    "version": "independent"
}
