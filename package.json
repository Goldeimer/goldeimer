{
    "description": "Goldeimer gemeinn√ºtzige GmbH's web applications monorepo",
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/runtime": "^7.12.1",
        "@goldeimer/babel-preset": "^0.0.1",
        "@goldeimer/browserslist-config": "^0.0.1",
        "@goldeimer/eslint-plugin": "^0.0.1",
        "@goldeimer/postcss-config": "^0.0.1",
        "@goldeimer/webpack-config": "^0.0.1",
        "@google/clasp": "^2.3.0",
        "@octokit/core": "^3.2.1",
        "@types/node": "^14.6.0",
        "@types/react": "^17.0.0",
        "agadoo": "^2.0.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.12.1",
        "eslint-import-resolver-lerna": "^2.0.0",
        "external-editor": "^3.1.0",
        "lerna": "^3.22.1",
        "markdownlint": "^0.22.0",
        "markdownlint-cli2": "^0.0.13",
        "path": "^0.12.7",
        "rimraf": "^3.0.2",
        "rollup": "^2.33.3",
        "typescript": "^4.0.2",
        "webpack": "^5.3.2",
        "webpack-cli": "^4.1.0"
    },
    "name": "goldeimer",
    "private": true,
    "resolutions": {
        "**/axios": "^0.21.0",
        "**/follow-redirects": "^1.13.1"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "build:cjs": "lerna run build:cjs",
        "build:clean": "yarn clean:install && yarn build",
        "build:dev": "lerna run build:dev",
        "build:esm": "lerna run build:esm",
        "build:prod": "lerna run build:prod",
        "build:shake": "lerna run build:shake",
        "build:umd": "lerna run build:umd",
        "clean": "concurrently 'yarn clean:artifacts' 'yarn clean:lockfile' 'yarn clean:packages' && yarn clean:root",
        "clean:artifacts": "lerna run clean --parallel",
        "clean:install": "yarn clean && yarn install --peers",
        "clean:lockfile": "rimraf package-lock.json yarn.lock",
        "clean:packages": "lerna clean --yes",
        "clean:root": "rimraf node_modules",
        "exec:parallel": "lerna exec --parallel",
        "lint": "eslint --cache --cache-location node_modules/.cache/eslint",
        "lint:all": "yarn lint 'packages/*/src/**/*.{js,jsx,ts,tsx}*'",
        "lint:all:fix": "yarn lint:all --fix",
        "lint:fix": "yarn lint --fix",
        "lint:staged": "lint-staged",
        "publish": "lerna publish",
        "publish:etc": "lerna publish --ignore-changes 'lib/**', 'packages/**'",
        "publish:lib": "lerna publish --ignore-changes 'etc/**', 'packages/**'",
        "publish:packages": "lerna publish --ignore-changes 'etc/**', 'lib/**'",
        "run:parallel": "lerna run --parallel",
        "shake": "lerna run shake",
        "test": "lerna run test --concurrency 1",
        "test:coverage": "lerna run test:coverage --parallel",
        "test:quick": "lerna run test:quick --concurrency 1",
        "test:watch": "lerna run test:watch --parallel",
        "util:process-env": "node -e 'console.log(process.env)' | grep npm",
        "version": "lerna version",
        "version:etc": "lerna version --ignore-changes 'lib/**', 'packages/**'",
        "version:lib": "lerna version --ignore-changes 'etc/**', 'packages/**'",
        "version:packages": "lerna version --ignore-changes 'etc/**', 'lib/**'"
    },
    "version": "0.2.0",
    "workspaces": {
        "nohoist": [],
        "packages": [
            "etc/**",
            "lib/**",
            "packages/**"
        ]
    }
}
