    ],
    "dependencies": {
        "@goldeimer/collection": "workspace:*",
        "@goldeimer/enum": "workspace:*",
        "@goldeimer/type-util": "workspace:*",
        "fs-extra": "^9.1.0",
        "klaw": "^3.0.0",
        "tslib": "*",
        "walk-back": "^5.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.13",
        "@goldeimer/babel-preset": "workspace:*",
        "@goldeimer/rollup-config": "workspace:*",
        "@goldeimer/tsconfig": "workspace:*",
        "@types/babel__core": "^7",
        "@types/concurrently": "^6",
        "@types/fs-extra": "^9",
        "@types/klaw": "^3",
        "@types/node": "^14.14.34",
        "concurrently": "^6.0.0",
        "rollup": "^2.41.2",
        "typescript": "^4.1.5"
    },
    "exports": {
        ".": {
            "import": "./dist/esm/goldeimer.file-system.esm.mjs",
            "require": "./dist/cjs/goldeimer.file-system.cjs.cjs",
            "node": {
                "import": "./dist/node/esm/goldeimer.file-system.node.esm.mjs",
                "require": "./dist/node/cjs/goldeimer.file-system.node.cjs.cjs"
            },
            "default": "./dist/umd/goldeimer.file-system.umd.js"
        }
    },
    "homepage": "https://github.com/goldeimer/goldeimer/lib/common/file-system#readme",
    "keywords": [
        "goldeimer"
    ],
    "license": "BSD-2-Clause",
    "main": "./dist/cjs/goldeimer.file-system.cjs.cjs",
    "module": "./dist/esm/goldeimer.file-system.esm.mjs",
    "name": "@goldeimer/file-system",
    "publishConfig": {
        "access": "public",
        "registry": "https://npmjs.org"
    },
    "repository": {
        "directory": "lib/common/file-system",
        "type": "git",
        "url": "git+https://github.com/goldeimer/goldeimer.git"
    },
    "scripts": {
        "build": "concurrently 'yarn build:types' 'yarn build:js'",
        "build:cjs": "yarn build:js --configTarget cjs",
        "build:esm": "yarn build:js --configTarget esm",
        "build:js": "rollup -c rollup.config.js",
        "build:shake": "yarn build:esm && yarn validate:shake",
        "build:types": "tsc --emitDeclarationOnly --outDir dist --declarationDir dist/types --declaration true --declarationMap true",
        "build:umd": "yarn build:js --configTarget umd",
        "explain": "tsc --explainFiles",
        "lint": "eslint src --ext .cjs --ext .js --ext .jsx --ext .mjs --ext .ts --ext .tsx",
        "lint:fix": "yarn lint --fix",
        "test": "env NODE_ENV=test echo \"[error] no test specified\" && exit 1",
        "type-check": "tsc --noEmit",
        "type-check:watch": "yarn type-check -- --watch",
        "validate": "concurrently 'yarn validate:pnp' 'yarn validate:shake'",
        "validate:pnp": "yarn dlx @yarnpkg/doctor",
        "validate:publish": "yarn validate",
        "validate:shake": "agadoo"
    },
    "sideEffects": false,
    "type": "module",
    "types": "./dist/types/file-system.d.ts",
    "version": "0.0.1"
}
